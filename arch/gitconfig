[user]
  name = Fabian Furger
  email = furgerfabian@hotmail.com
[color]
  ui = true
[core]
  editor = vim
  excludefile = ~/.gitignore
[fetch]
  prune = true
[pull]
  rebase = true
[alias]
  aliases = !git var -l | grep -e "^alias" | cut -d '.' -f 2-
  graph = log --graph --oneline --decorate
  authors = shortlog -s -n --all
  fetchall = fetch --all
  publish = push --progress \"origin\" HEAD:refs/publish/master
  show-graph = log --graph --abbrev-commit --pretty=oneline
  co = checkout
  ec = config --global -e
  cob = checkout -b
  save = !git add -A && git commit -m 'SAVEPOINT'
  wip = !git add -u && git commit -m 'WIP'
  undo = reset HEAD~1 --mixed
  amend = commit --amend
  wipe = !git add -A && git commit -qm 'WIPE SAVEPOINT' && git reset HEAD~1 --hard
  sub-update = !git submodule update --init --recursive
  ignored = !git ls-files -v | grep "^[[:lower:]]"
  prune-local = !git branch --merged | tr -d '*' | grep -v dev | xargs -n1 git branch -d
  ss = !git stash save
  sp = !git stash pop
  please = push --force-with-lease
  stsh = stash --keep-index
  staash = stash --include-untracked
  staaash = stash --all
  st = status --short --branch
  shorty = status --short --branch
  grog = !git log --graph --abbrev-commit --decorate --all --format=format:'%C(bold blue)%h%C(reset) - %C(bold cyan)%aD%C(dim white) - %an%C(reset) %C(bold green)(%ar)%C(reset)%C(bold yellow)%d%C(reset)%n %C(white)%s%C(reset)'
[push]
  default = matching
[http]
  sslVerify = false
[credential]
  helper = cache
#[mailmap]
#  file = ~/.mailmap
[init]
  templatedir = ~/.git-templates
[help]
  autocorrect = 1
[url "git@github.com:"]
  insteadOf = gh:
