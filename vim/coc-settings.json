{
  "cSpell.dictionaryDefinitions": [
    {
      "name": "vim-dictionary",
      "path": "/home/fabian/.config/nvim/spell/en.utf-8.add"
    }
  ],
  "cSpell.dictionaries": [ "vim-dictionary" ],

  "[python][javascript][javascriptreact][typescript][typescriptreact]": {
    "coc.preferences.formatOnSave": true
  },
  "suggest.noselect": true,
  "suggest.enablePreselect": false,
  "suggest.selection": "first",

  "tabnine.priority": 10,
  "suggest.languageSourcePriority": 85,

  //"snippets.enableStatusItem": true,
  "snippets.snipmate.enable": false,
  "snippets.ultisnips.enable": true,
  "snippets.userSnippetsDirectory": "~/.config/nvim/custom-snippets",

  "prettier.prettierPath": "/usr/local/bin",
  //"prettier.trailingComma": "all",
  "eslint.debug": true,
  "eslint.packageManager": "yarn",
  //"eslint.runtime":  "/usr/local/bin",
  //"eslint.nodePath": "/usr/local/bin",
  //"eslint.trace.server": "messages",
  //"eslint.validate": ["js", "jsx", "ts", "tsx"],
  //"eslint.workingDirectories": ["~/git/sedimentum/VigilanceCockpitFrontend"],

  "pyright.disableProgressNotifications": true,

  //"python.venvPath": "venv", // don't think that works
  "python.formatting.provider": "black",
  "python.formatting.blackPath": "~/.local/bin/black",
  "python.formatting.blackArgs": ["--line-length", "120"],
  //"python.analysis.logLevel": "Trace",
  //"python.linting.lintOnSave": true,
  //"python.linting.mypyEnabled": true, // quite slow
  "python.linting.pylintEnabled": true,
  "python.linting.pylintArgs": ["--django-settings-module="],
  //"python.linting.pylintArgs": ["--django-settings-module=vigilance_cockpit.settings.test"],
  "python.sortImports.path": "~/.local/bin/isort",
  "pyright.organizeimports.provider": "isort",
  "pyright.inlayHints.functionReturnTypes": false,
  "pyright.inlayHints.variableTypes": false,
}
